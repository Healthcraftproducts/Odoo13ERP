<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="web_external_layout_inherit_id" inherit_id="web.external_layout_standard">

        <xpath expr="//div/div[3]" position="replace">

        </xpath>

        <xpath expr="//div/div[1]" position="replace">

            <table width="100%" height="100%" border="None">
                <tbody>
                    <tr>

                        <td style="width: 10%; text-align: left;" border="None"><br><img t-if="company.logo" width="140" height="140" t-att-src="image_data_uri(company.logo)" alt="Logo"/></br></td>
                        <td style="width: 90%; text-align: left;" border="None">
                           <p>&amp;nbsp;</p> 
                            <strong><span style="font-size:32px;" t-field= "company.partner_id.name"/></strong>
                                
                                <br><span style="font-size:16px;" t-field= "company.partner_id.street"/>,<span style="font-size:16px;" t-field= "company.partner_id.street2"/>,<span style="font-size:16px;" t-field= "company.partner_id.city"/>, <span style="font-size:16px;" t-field="company.partner_id.state_id"/>,<span style="font-size:16px;" t-field="company.partner_id.country_id"/>, <span style="font-size:16px;" t-field= "company.partner_id.zip"/>, </br>
                                <br><span style="font-size:16px;" t-field= "company.partner_id.email"/>,</br>
                                <br><span style="font-size:16px;" t-field= "company.partner_id.phone"/>,</br>
                                <br><strong><span style="font-size:16px;">Worldwide leaders in fall prevention:</span> <span style="font-size:16px;" t-field= "company.partner_id.website"/></strong></br>
                                
                        </td>
                    </tr>
                </tbody>
            </table>

        </xpath>

        <xpath expr="//div/div[2]" position="replace">
        </xpath>

        <xpath expr="//div[3]" position="replace">
        </xpath>
    </template>

<template id="sale_custom_report_inherit_id" inherit_id="sale.report_saleorder_document">

        <xpath expr="//t[@t-set='address']" position="replace">


        </xpath>

        <xpath expr="//t[@t-if='doc.partner_shipping_id == doc.partner_invoice_id
                             and doc.partner_invoice_id != doc.partner_id
                             or doc.partner_shipping_id != doc.partner_invoice_id']" position="replace">
        </xpath>



<xpath expr="//div[@class='page']" position="before">
    <br/><br/>
    <table width="100%">
            <tbody>

            <tr>
                <td style="width: 50%; text-align: left;"><strong><u>BILL TO:</u></strong></td>
                <td style="width: 50%; text-align: left;"><strong><u>SHIP TO:</u></strong></td>
                </tr>
                <tr>
                <td style="width: 50%; text-align: left;">
                <span t-field="doc.partner_invoice_id.name"/>
                    <t t-if="doc.partner_invoice_id.street!=False or doc.partner_invoice_id.street2!=False">
                    <br><span t-field="doc.partner_invoice_id.street"/><span t-field="doc.partner_invoice_id.street2"/></br>
                    </t>
                    <t t-if ="doc.partner_invoice_id.city!=False">
                    <br><span t-field="doc.partner_invoice_id.city"/></br>
                </t>
                    <t t-if ="doc.partner_invoice_id.state_id!=False or doc.partner_invoice_id.country_id!=False">

                        <br><span t-field="doc.partner_invoice_id.state_id"/><span t-field="doc.partner_invoice_id.country_id"/></br>
                    </t>
                    <t t-if ="doc.partner_invoice_id.zip!=False">
                      <br><span t-field="doc.partner_invoice_id.zip"/></br> 
                    </t>
                    <t t-if ="doc.partner_invoice_id.phone!=False">
                      <br><span t-field="doc.partner_invoice_id.phone"/></br> 
                    </t>
                    <t t-if ="doc.partner_invoice_id.email!=False">
                      <br><span t-field="doc.partner_invoice_id.email"/></br> 
                    </t>
                    <t t-if ="doc.partner_id.bank_ids">
                        <t t-foreach="doc.partner_id.bank_ids" t-as="ba">
                            <br><span t-field="ba.acc_number"/></br> 
                        </t>
                    </t>
                </td>
                <td style="width: 50%; text-align: left;">
                <span t-field="doc.partner_shipping_id.name"/>
                    <t t-if="doc.partner_shipping_id.street!=False or doc.partner_shipping_id.street2!=False">
                    <br><span t-field="doc.partner_shipping_id.street"/><span t-field="doc.partner_shipping_id.street2"/></br>
                    </t>
                    <t t-if ="doc.partner_shipping_id.city!=False">
                    <br><span t-field="doc.partner_shipping_id.city"/></br>
                    </t>
                <t t-if ="doc.partner_shipping_id.state_id!=False or doc.partner_shipping_id.country_id!=False">
                        <br><span t-field="doc.partner_shipping_id.state_id"/><span t-field="doc.partner_shipping_id.country_id"/></br>
                    </t>
                    <t t-if ="doc.partner_shipping_id.zip!=False">
                      <br><span t-field="doc.partner_shipping_id.zip"/></br> 
                    </t>
                    <t t-if ="doc.partner_shipping_id.phone!=False">
                      <br><span t-field="doc.partner_shipping_id.phone"/></br> 
                    </t>
                    <t t-if ="doc.partner_shipping_id.email!=False">
                      <br><span t-field="doc.partner_shipping_id.email"/></br> 
                    </t>
                  </td>
            </tr>
        </tbody>
    </table>
 </xpath>

 <xpath expr="//div[@class='row mt32 mb32']" position="replace">

    <div class="row mt32 mb32" id="informations">
        <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto mw-100 mb-2">
            <strong>Quotation Date:</strong>
            <p class="m-0" t-field="doc.date_order" t-options='{"format": "MM/dd/yyyy"}'/>
        </div>
        
        <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2" name="expiration_date">
            <strong>Expiration:</strong>
            <p class="m-0" t-field="doc.validity_date" t-options='{"format": "MM/dd/yyyy"}'/>
        </div>
        <div t-if="doc.user_id.name and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2">
            <strong>Salesperson:</strong>
            <p class="m-0" t-field="doc.user_id"/>
        </div>
        <div t-if="doc.client_order_ref and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2">
            <strong>Reference:</strong>
            <p class="m-0" t-field="doc.client_order_ref"/>
        </div>
        <div t-if="doc.shipping_method and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2">
            <strong>Shipping:</strong>
            <p class="m-0" t-field="doc.shipping_method"/>
        </div>
        <div t-if="doc.client_order_ref and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2">
            <strong>Terms:</strong>
            <p class="m-0" t-field="doc.payment_term_id"/>
        </div>

                
                
    </div>

 </xpath>

<xpath expr="//div[@class='page']/h2[@class='mt16']" position="replace">

    <h2 class="mt16">
        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
            <span t-if="doc.state not in ['draft','sent']">Order # <span t-field="doc.name"/></span>
            <span t-if="doc.state in ['draft','sent']">Quotation #<span t-field="doc.quotation_id"/> </span>
        </t>
        <t t-if="env.context.get('proforma', False) or is_pro_forma">
            <span>Pro-Forma Invoice # </span><span t-field="doc.name"/>
        </t>
        
    </h2>

</xpath>

<xpath expr="//table[@class='table table-sm o_main_table']" position="replace">

        <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

            <table class="table table-sm o_main_table" width="100%">
                <thead>
                    <tr>
                        <th name="th_itemcode" class="text-left">Item Code</th>
                        <th name="th_description" class="text-center">Description</th>
                        <th name="th_quantity" class="text-right">Quantity</th>
                        <th name="th_price" class="text-right">Unit Cost</th>
                        <th name="th_discount" class="text-right">
                            <span>Additional Disc.%</span>
                        </th>
                        <th name="th_taxes" class="text-right">Amount</th>
                        
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="doc.order_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td name="td_name" style="padding-top: 2%;padding-bottom: 2%;"><span t-field="line.product_id.default_code"/></td>
                                <td name="td_name" class="text-center" style="padding-top: 2%;padding-bottom: 2%;"><span t-field="line.product_id.name"/></td>
                                <td name="td_quantity" class="text-right" style="padding-top: 2%;padding-bottom: 2%;">
                                    <span t-field="line.product_uom_qty"/>
                                    <span t-field="line.product_uom"/>
                                </td>
                                <td name="td_priceunit" class="text-right" style="padding-top: 2%;padding-bottom: 2%;">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td  class="text-right" style="padding-top: 2%;padding-bottom: 2%;">
                                    <span t-field="line.discount"/>
                                </td>
                                <!-- <td name="td_taxes" class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                </td> -->
                                <td name="td_subtotal" class="text-right o_price_total" style="padding-top: 2%;padding-bottom: 2%;">
                                    <span t-field="line.price_subtotal"/>
                                    
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <!-- <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t> -->
                    </t>
                </tbody>
            </table>

</xpath>

    <xpath expr="//div[@class='clearfix']" position="replace">

        <table class="table-sm o_main_table" width="100%">
            <tbody>
                <tr>
                    <td style="width: 50%;" border="None">&amp;nbsp;</td>
                    <td style="width: 30%; text-align: left; padding-top: 0%;padding-bottom: 0%;">
                    <span><strong>Total (before Discount)</strong></span>
                    </td>
                    <td style="width: 20%; text-align: right; padding-top: 0%;padding-bottom: 0%;">
                    <span style="text-align: right;"><span t-esc="sum([l.line_amount for l in doc.order_line])" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                    </span>
                    </td>
                    </tr>
                    <tr>
                    <td style="width: 50%;" border="None">&amp;nbsp;</td>
                    <td style="width: 30%; text-align: left; padding-top: 0%;padding-bottom: 0%;">
                        <span><strong>Additional Product Discount</strong></span>
                    </td>
                    <td style="width: 20%; text-align: right; padding-top: 0%;padding-bottom: 0%;">
                        <span style="text-align: right;"><span t-esc="-sum([(l.line_amount*l.discount)/100 for l in doc.order_line if l.product_ship_method==False])" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </span>
                    </td>
                    </tr>
                    <tr>
                    <td style="width: 50%;" border="None">&amp;nbsp;</td>
                    <td style="width: 30%; text-align: left; padding-top: 0%;padding-bottom: 0%;">
                        <span><strong>Additional Shipping Discount</strong></span>
                    </td>
                    <td style="width: 20%; text-align: right; padding-top: 0%;padding-bottom: 0%;">
                        <span style="text-align: right;"><span t-esc="-sum([(l.line_amount*l.discount)/100 for l in doc.order_line if l.product_ship_method==True])" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </span>
                    </td>
                    </tr>
                    <tr>
                    <td style="width: 50%;" border="None">&amp;nbsp;</td>
                    <td style="width: 30%; text-align: left; padding-top: 0%;padding-bottom: 0%;  border: 1px solid black; border-left:none; border-bottom:none; border-right:none;">
                        <span><strong>Subtotal</strong></span>
                    </td>
                    <td style="width: 20%; text-align: right; padding-top: 0%;padding-bottom: 0%; border: 1px solid black; border-left:none; border-bottom:none; border-right:none;">
                        <span style="text-align: right;"><span t-field="doc.amount_untaxed"/></span>
                    </td>
                    </tr>
                    <tr>
                    <td style="width: 50%;" border="None">&amp;nbsp;</td>
                    <td style="width: 30%; text-align: left; padding-top: 0%;padding-bottom: 0%; border: 1px solid black; border-left:none; border-bottom:none; border-right:none;">
                        <span><strong>Tax Rate</strong></span>
                    </td>
                    <td style="width: 20%; text-align: right; padding-top: 0%;padding-bottom: 0%; border: 1px solid black; border-left:none; border-bottom:none; border-right:none;">
                        <span style="text-align: right;"><span t-field="doc.amount_tax"/></span>
                    </td>

                    </tr>
                    <tr>
                    <td style="width: 50%;" border="None">&amp;nbsp;</td>
                    <td style="width: 30%; text-align: left; padding-top: 0%;padding-bottom: 0%; border: 1px solid black; border-left:none; border-bottom:none; border-right:none;">
                        <span><strong>Total</strong></span>
                    </td>
                    <td style="width: 20%; text-align: right; padding-top: 0%;padding-bottom: 0%; border: 1px solid black; border-left:none; border-bottom:none; border-right:none;">
                        <span style="text-align: right;"><span t-field="doc.amount_total"/></span>
                    </td>
                </tr>
            </tbody>
        </table>
    </xpath>

    <xpath expr="//div[@t-if='doc.signature']" position="replace">

    </xpath>

    <xpath expr="//p[@t-field='doc.note']" position="replace">
        <strong><u><span style="font-size:18px;">Terms and Conditions</span></u></strong>
        <p t-field="doc.note" />
    </xpath>


</template>


</odoo>



